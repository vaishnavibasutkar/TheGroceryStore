
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>The Grocery Store - Admin</title>
</head>


<body style="background-color: #eeeeee; overflow-y: hidden;">
    <style>

        .login {
            display: block;
            justify-content: center;
            margin-right: auto;
            margin-left: auto;
            margin-top: 20%;
            margin-bottom: 20%;
            position: relative;
            align-items: stretch;
            box-sizing: border-box;
            height:max-content;
            width:min-content;
        }
    </style>
    <div class="container login" style="border:double;border-color:red">
        <div class="col-md-6 left" style="background-color:white;width:stretch">
            <div class="row" align="center">
                <img src="~/Images/grocerystorelogo.png" />
            </div>
            <div class="row">
                
            </div>
            <div class="row">
                
            </div>
        </div>
        <div class="col-md-6"  style="background-color:tomato;color:green;width:stretch">
            <h1 class="page-header">Login</h1>
            <form>
                <div class="form-group">
                    <label class="control-lab"> UserName: </label>
                    <input type="text" class="form-control " placeholder="Enter UserName"/>
                </div>
                <div class="form-group">
                    <label class="control-label"> Password: </label>
                    <input type="password" class="form-control" placeholder="Enter Password"/>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn-primary" />
                    <input type="reset" class="btn-primary" />
                </div>
            </form>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</body>

</html>