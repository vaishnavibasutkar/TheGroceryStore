                                <th>
                                    @Html.DisplayName("Quatity")
                                </th>
                                <th>
                                    @Html.DisplayName("Total Amount")
                                </th>
                            </tr>
                        </thead>

                        @foreach (var item in Model.Order_Details)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.od_id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.o_id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.p_id)
