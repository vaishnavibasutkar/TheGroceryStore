        <h4>Order</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.c_id)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.c_id)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.order_date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.order_date)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.delivery_charge)
