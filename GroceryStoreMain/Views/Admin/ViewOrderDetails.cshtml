            <dd>
                @*@Html.DisplayFor(model => model.Order_Status.code)*@
                @Html.DropDownListFor(c => c.os_id, new SelectList(ViewBag.OrderStatus, "os_id", "code"), htmlAttributes: new { @class = "form-control col-md-3" })
                @Html.HiddenFor(model => model.o_id)
            </dd>
            <dd >
