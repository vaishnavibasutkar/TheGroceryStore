@{
    ViewBag.Title = "ViewOrderDetails";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>ViewOrderDetails</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
