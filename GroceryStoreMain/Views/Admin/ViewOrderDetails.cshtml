            <dd>
                @Html.DisplayFor(model => model.delivery_charge)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.tax)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tax)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.total_amount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.total_amount)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Customer.full_name)
            </dt>

