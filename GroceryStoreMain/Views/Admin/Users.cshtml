@model IEnumerable<GroceryStoreMain.Models.Users>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div style="margin-left:10px">
    <br />
    <h2>User</h2>
    <h5 class="text-info"> @TempData["Message"]</h5>
    <div class="table-responsive">

        <table class="table table-bordered table-condensed table-striped table-hover caption-top">
            <caption>
                <div class="col-sm-2">
                    <a href="@Url.Action("AdminAddEditUser","Admin",new { id = 0 })"
                       class="btn btn-toolbar btn-outline-success btn-lg">Add New Admin User <span class="glyphicon glyphicon-plus-sign"></span></a>

                </div>
                <div class="col-sm-2">
                </div>
                <div class="col-sm-2">
                    <a href="@Url.Action("DistributorAddEditUser","Admin" , new { id = 0 })"
                       class="btn btn-toolbar btn-outline-success btn-lg">Add New Distributor User <span class="glyphicon glyphicon-plus-sign"></span></a>

                </div>
                <br />
            </caption>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.usertype)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="10">No Record's found.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.usertype)
                        </td>
                        <td>
                            <div class="dropout">
                                <button class="more">
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </button>
                                <div>
                                    @if ((int)item.usertype == 1)
                                    {
                                        @Html.ActionLink("Edit", "AdminAddEditUser", new { id = item.id })
                                    }
                                    @if ((int)item.usertype == 2)
                                    {

                                        @Html.ActionLink("Edit", "CustomerEditUser", new { id = item.id })
                                    }
                                    @if ((int)item.usertype == 3)
                                    {
                                        @Html.ActionLink("Edit", "DistributorAddEditUser", new { id = item.id })
                                    }

                                    @Html.ActionLink("Remove", "RemoveUser", new { id = item.usertype + " - " + item.id })

                                </div>
                            </div>
                            <style>
                                .more {
                                    cursor: pointer;
                                    border: none;
                                    background: transparent;
                                }

                                    .more span {
                                        display: block;
                                        width: .25rem;
                                        height: .25rem;
                                        background: #363636;
                                        border-radius: 50%;
                                        pointer-events: none;
                                    }

                                        .more span:not(:last-child) {
                                            margin-bottom: .125rem;
                                        }

                                .dropout {
                                    z-index: 9001;
                                    width: fit-content;
                                    position: relative;
                                    margin-left: auto;
                                    margin-right: auto;
                                }

                                    .dropout div {
                                        position: absolute;
                                        top: -1.1rem;
                                        right: 1.5rem;
                                        transform: scaleX(0);
                                        transform-origin: right;
                                        transition: transform 0.12s ease;
                                    }

                                    .dropout.active div {
                                        transform: scaleX(1);
                                    }
                            </style>
                            <script>
                                document.querySelector('table').onclick = ({
                                    target
                                }) => {
                                    if (!target.classList.contains('more')) return
                                    document.querySelectorAll('.dropout.active').forEach(
                                        (d) => d !== target.parentElement && d.classList.remove('active')
                                    )
                                    target.parentElement.classList.toggle('active')
                                }
                            </script>
                        </td>
                    </tr>
                }
            }

        </table>
    </div>
</div>
