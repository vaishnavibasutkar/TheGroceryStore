@model IEnumerable<GroceryStoreMain.Models.Delivery_Time_SlotModel>

@{
    ViewBag.Title = "DeliveryTimeSlotList";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}


<div style="margin-left:10px">
    <br />
    <h2>DeliveryTimeSlotList</h2>
    <h5 class="text-info"> @TempData["Message"]</h5>
    <div class="table-responsive">

        <table class="table table-bordered table-condensed table-striped table-hover caption-top">
            <caption>
                <div class="col-sm-2">
                    <a href="@Url.Action("AddEditSchedule","Admin",new { id = 0 })"
                       class="btn btn-toolbar btn-outline-success btn-lg">Add New Schedule/ Delivery Time Slot <span class="glyphicon glyphicon-plus-sign"></span></a>

                </div>
                <br />
            </caption>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.dts_id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.capacity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.start_datetime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.duration)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="10">No Record's found.</td>
                </tr>
            }
            else
            {

                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.dts_id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.capacity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.start_datetime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.duration)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "AddEditSchedule", new {  id=item.dts_id}) |
                            @Html.ActionLink("Delete", "DeleteDTS", new {  id=item.dts_id })
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>