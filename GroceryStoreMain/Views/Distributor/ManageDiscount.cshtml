                                        border-radius: 50%;
                                        pointer-events: none;
                                    }

                                        .more span:not(:last-child) {
                                            margin-bottom: .125rem;
                                        }

                                .dropout {
                                    z-index: 9001;
                                    width: fit-content;
                                    position: relative;
                                    margin-left: auto;
                                    margin-right: auto;
                                }

                                    .dropout div {
                                        position: absolute;
                                        top: -1.1rem;
                                        right: 1.5rem;
                                        transform: scaleX(0);
                                        transform-origin: right;
                                        transition: transform 0.12s ease;
                                    }

                                    .dropout.active div {
                                        transform: scaleX(1);
                                    }
                            </style>
                            <script>
